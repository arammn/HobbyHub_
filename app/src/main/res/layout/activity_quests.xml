<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    android:background="#212121">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="ðŸŽ¯ Quests"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/design4">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Daily Login"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#555"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/loginQuestStatus"
                        android:text="Checking..."
                        android:textColor="#888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/loginCheckmark"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp" />


            <ImageButton
                android:id="@+id/claimLoginButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/design4"
                app:srcCompat="@drawable/ic_search"
                android:scaleType="centerInside"
                android:contentDescription="Claim Login Reward"
                android:layout_marginStart="8dp"
                android:padding="22dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Event Creation Quest -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/design4">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Event Creation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#555"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/eventQuestStatus"
                        android:text="Checking..."
                        android:textColor="#888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/eventCooldownTimer"
                        android:textColor="#F44336"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/eventCheckmark"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp" />


            <ImageButton
                android:id="@+id/claimEventButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/design4"
                app:srcCompat="@drawable/ic_search"
                android:scaleType="centerInside"
                android:contentDescription="Claim Event Reward"
                android:layout_marginStart="8dp"
                android:padding="22dp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
